<div class="page-header">
  <h1>Modifier som mot de passe Petsy</h1>
</div>

<div class="row">

  <div class="col-md-8">

    <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="panel panel-default">

      <div class="panel-heading">
        Modifier votre mot de passe
      </div>

      <div class="panel-body">

        <%= form_for @user, url: password_path(@user.id), html: {class: 'form-horizontal'} do |f| %>

            <%= f.hidden_field :recover_password %>

            <div class="form-group">
              <%= f.label :password, "Mot de passe", class: 'col-md-4 control-label'%>
              <div class="col-md-6">
                <%= f.password_field :password, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Confirmer le mot de passe", class: 'col-md-4 control-label'%>
              <div class="col-md-6">
                <%= f.password_field :password_confirmation, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-6 col-md-offset-4">
                <button type="submit" class="btn btn-primary">Valider</button>
              </div>
            </div>

        <% end %>

      </div>

    </div>

  </div>

  <div class="col-md-4">
    <%= image_tag 'cat.jpg', width: 300 %>
  </div>

</div>