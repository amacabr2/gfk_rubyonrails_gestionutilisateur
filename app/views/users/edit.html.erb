<div class="page-header">
  <div class="row">
    <div class="col-lg-2">
      <% if @user.avatar %>
          <%= image_tag @user.avatar_url %>
      <% end %>
    </div>
    <div class="col-lg-10">
      <h1>Votre compte Petsy</h1>
    </div>
  </div>
</div>

<div class="row">

  <div class="col-md-8">

    <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="panel panel-default">

      <div class="panel-heading">
        Editer votre compte
      </div>

      <div class="panel-body">

        <%= form_for @user, url: profil_path, html: {class: 'form-horizontal'} do |f| %>

            <div class="form-group">
              <%= f.label :username, "Nom utilisateur", class: 'col-md-4 control-label'%>
              <div class="col-md-6">
                <%= f.text_field :username, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :email, "Email", class: 'col-md-4 control-label'%>
              <div class="col-md-6">
                <%= f.email_field :email, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :firstname, "PrÃ©nom", class: 'col-md-4 control-label'%>
              <div class="col-md-6">
                <%= f.text_field :firstname, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :lastname, "Nom", class: 'col-md-4 control-label'%>
              <div class="col-md-6">
                <%= f.text_field :lastname, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :avatar, "Avatar", class: 'col-md-4 control-label'%>
              <div class="col-md-6">
                <%= f.file_field :avatar_file, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-6 col-md-offset-4">
                <button type="submit" class="btn btn-primary">S'inscrire</button>
              </div>
            </div>

        <% end %>

      </div>

    </div>

  </div>

  <div class="col-md-4">
    <%= image_tag 'cat.jpg', width: 300 %>
  </div>

</div>